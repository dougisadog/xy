<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="sendVerifyCodeViewModel"
            type="com.meten.xyh.modules.user.viewmodel.SendVerifyCodeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header" />

        <LinearLayout
            android:id="@+id/labelLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <TextView
                style="@style/recharge_detail_text"
                android:text="我们已经发送"
                android:textColor="@color/hex_2B2E35"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/verifyCodeSenderTv"
                style="@style/recharge_detail_text"
                android:text="验证码"
                android:textColor="@color/hex_2FD393"
                android:textSize="18dp" />

            <TextView
                style="@style/recharge_detail_text"
                android:text="到你的手机："
                android:textColor="@color/hex_2B2E35"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/phoneTv"
            style="@style/recharge_detail_text"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/hex_2B2E35"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/labelLl"
            android:text="@{sendVerifyCodeViewModel.phone}"
            tools:text="13987654321" />


        <TextView
            android:id="@+id/verifyPwdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="验证码"
            android:textColor="@color/hex_2B2E35"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneTv" />

        <EditText
            android:id="@+id/verifyPwdEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="20dp"
            android:text="@={sendVerifyCodeViewModel.verifyCode}"
            android:textColor="@color/hex_2D2D2D"
            android:textColorHint="@color/hex_B8B8B8"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/verifyPwdLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verifyPwdLabel"
            app:layout_constraintTop_toTopOf="@+id/verifyPwdLabel" />

        <TextView
            android:id="@+id/supportTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="接收短信大约需要3秒钟"
            android:textColor="@color/hex_A2A2A2"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verifyPwdLabel" />

        <TextView
            android:id="@+id/nextTv"
            style="@style/bottom_button"
            android:layout_marginTop="60dp"
            android:enabled="false"
            android:text="下一步"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/supportTv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>