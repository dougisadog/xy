<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loginViewModel"
            type="com.meten.xyh.modules.login.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:padding="13dp"
            android:text="@={loginViewModel.username}"
            android:textColor="@color/hex_2D2D2D"
            android:textColorHint="@color/hex_B8B8B8"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/verifyCodeTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/verifyCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/get_verify_code"
            android:textColor="@color/hex_2D2D2D"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/username" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hex_B8B8B8"
            app:layout_constraintTop_toBottomOf="@+id/username" />


        <EditText
            android:id="@+id/verifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:padding="13dp"
            android:text="@={loginViewModel.verifyCode}"
            android:textColor="@color/hex_2D2D2D"
            android:textColorHint="@color/hex_B8B8B8"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/username" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hex_B8B8B8"
            app:layout_constraintTop_toBottomOf="@+id/verifyCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>