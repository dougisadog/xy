<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="loginViewModel"
            type="com.meten.xyh.modules.login.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="95dp"
            android:gravity="center"
            android:textColor="@color/hex_2B2E35"
            android:text="手机快捷登录/注册"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verifyCodeTv"
            android:layout_marginTop="51dp"
            android:inputType="number"
            android:text="@={loginViewModel.username}"
            android:textSize="14dp"
            android:padding="13dp"
            android:hint="请输入您的手机号"
            android:textColor="@color/hex_2D2D2D"
            android:textColorHint="@color/hex_B8B8B8"
            android:background="@color/white"
            />


        <TextView
            android:id="@+id/verifyCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/username"
            app:layout_constraintBottom_toBottomOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/hex_2D2D2D"
            android:text="@string/get_verify_code"
            android:textSize="12dp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:background="@color/hex_B8B8B8"
            />



        <EditText
            android:id="@+id/verifyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:padding="13dp"
            android:inputType="textPassword"
            android:text="@={loginViewModel.verifyCode}"
            android:hint="请输入短信验证码"
            android:textColor="@color/hex_2D2D2D"
            android:textColorHint="@color/hex_B8B8B8"
            android:background="@color/white"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/verifyCode"
            android:background="@color/hex_B8B8B8"
            />

        <CheckBox
            android:id="@+id/confirmCheckIv"
            app:layout_constraintTop_toTopOf="@+id/confirmCheckLl"
            app:layout_constraintBottom_toBottomOf="@+id/confirmCheckLl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:checked="@={loginViewModel.confirmCheck}"
            tools:checked="true"
            android:button="@drawable/selector_confirm_circle"
            />

        <LinearLayout
            android:id="@+id/confirmCheckLl"
            app:layout_constraintTop_toBottomOf="@+id/verifyCode"
            app:layout_constraintStart_toEndOf="@+id/confirmCheckIv"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/username"
                app:layout_constraintBottom_toBottomOf="@+id/username"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textColor="@color/hex_B8B8B8"
                android:text="我已阅读并同意"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/username"
                app:layout_constraintBottom_toBottomOf="@+id/username"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textColor="@color/hex_2F65EA"
                android:text="“希氧用户协议”"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/username"
                app:layout_constraintBottom_toBottomOf="@+id/username"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textColor="@color/hex_B8B8B8"
                android:text="和"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/privacyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/username"
                app:layout_constraintBottom_toBottomOf="@+id/username"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textColor="@color/hex_2F65EA"
                android:text="“隐私政策”"
                android:textSize="12dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/nextTv"
            style="@style/bottom_button"
            app:layout_constraintTop_toBottomOf="@+id/confirmCheckLl"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:text="进入希氧" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>