<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="singleInputViewModel"
            type="com.meten.xyh.modules.login.viewmodel.SingleInputViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@{singleInputViewModel.title}"
                android:textColor="@color/hex_2B2E35"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="手机快捷登录/注册" />

            <EditText
                android:id="@+id/inputEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:hint="@{singleInputViewModel.hint}"
                android:inputType="textPassword"
                android:padding="13dp"
                android:text="@={singleInputViewModel.input}"
                android:textColor="@color/hex_2D2D2D"
                android:textColorHint="@color/hex_B8B8B8"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:hint="请输入您的手机号" />


            <TextView
                android:id="@+id/nextTv"
                style="@style/bottom_button"
                android:layout_marginTop="80dp"
                android:enabled="false"
                android:text="@{singleInputViewModel.button}"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/inputEt"
                tools:text="发送验证码" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>