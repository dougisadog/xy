<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="teacherInfoViewModel"
            type="com.meten.xyh.modules.teacher.viewmodel.TeacherInfoViewModel" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/headerIv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:image="@{teacherInfoViewModel.teacher.image}"
                    app:layout_constraintDimensionRatio="h,375:260"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@color/hex_3AD08F" />

                <TextView
                    android:id="@+id/subTitleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{teacherInfoViewModel.teacher.subTitle}"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/introductionTv"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="郭老师·美式发音速成课" />

                <TextView
                    android:id="@+id/introductionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{teacherInfoViewModel.teacher.introduction}"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/headerIv"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="真人视频教学，专项突破真人视频教学" />

                <TextView
                    android:id="@+id/labelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="名师简介"
                    android:textColor="@color/hex_2B2E35"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/headerIv" />

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:text="@{teacherInfoViewModel.teacher.detailContent}"
                    android:textColor="@color/hex_2B2E35"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelTv"
                    tools:text="上课条理清晰，重难点明确\n\n英语专业八级，美语纯正地道，专业功底扎实，授课风趣幽默，是学生的良师益友。擅长初中英语语法、词汇、句法以及对中考中的各大题型有深入的研究，从事英语教学多年，积累了丰富的教学经验。" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="53dp"
                    android:src="@drawable/icon_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                tools:listitem="@layout/layout_course_info_item" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>