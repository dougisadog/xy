<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="rechargeViewModel"
            type="com.meten.xyh.modules.recharge.viewmodel.RechargeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/header"
                    layout="@layout/layout_header" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/balanceCl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header"

                    >

                    <TextView
                        android:id="@+id/balanceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{rechargeViewModel.balance.toString()}"
                        android:textColor="@color/hex_1A1A1A"
                        android:textSize="42dp"
                        app:layout_constraintEnd_toStartOf="@+id/unitTv"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="84.50" />

                    <TextView
                        android:id="@+id/unitTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:text="希氧币"
                        android:textColor="@color/hex_1A1A1A"
                        android:textSize="15dp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/balanceTv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/balanceTv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/rechargeLabelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="66dp"
                    android:text="充值"
                    android:textColor="@color/hex_A2A2A2"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/balanceCl" />

                <LinearLayout
                    android:id="@+id/changePageTypeLl"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/rechargeLabelTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rechargeLabelTv">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:gravity="center"
                        android:text="@{rechargeViewModel.payType.text}"
                        android:textColor="@color/hex_1A1A1A"
                        android:textSize="16dp"
                        tools:text="微信支付" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_home_more" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/changePageTypeLl"
                    tools:itemCount="4"
                    tools:listitem="@layout/layout_recharge_item" />

                <TextView
                    android:id="@+id/nextTv"
                    style="@style/bottom_button"
                    android:layout_marginTop="36dp"
                    android:text="确认支付"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/rv" />

                <TextView
                    android:id="@+id/supportTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="充值说明：
充值未完成时，请不要切换账号或者卸载app，请等待充值结束，否则可能出现账号未到账的情况，若出现此类情况，请咨询客服。
"
                    android:textColor="@color/hex_A2A2A2"
                    android:textSize="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/nextTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/fragmentContainerFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</layout>