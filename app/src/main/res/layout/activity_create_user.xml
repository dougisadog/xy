<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

        <variable
            name="createUserViewModel"
            type="com.meten.xyh.modules.user.viewmodel.CreateUserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hex_EDEDED">

        <include
            android:id="@+id/header"
            layout="@layout/layout_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/header">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <include
                    android:id="@+id/titleCl"
                    layout="@layout/layout_action_item"
                    app:title="@{@string/label_name}"
                    app:value="@{createUserViewModel.user.name}" />

                <include
                    android:id="@+id/signatureCl"
                    layout="@layout/layout_action_item"
                    app:title="@{@string/label_signature}"
                    app:value="@{createUserViewModel.user.name}" />

                <include
                    android:id="@+id/stageCl"
                    layout="@layout/layout_action_item"
                    app:title="@{@string/label_stage}"
                    app:value="@{createUserViewModel.user.stage}" />

                <include
                    android:id="@+id/interestCl"
                    layout="@layout/layout_action_item"
                    app:title="@{@string/label_interest}"
                    app:value="@{createUserViewModel.user.interest}" />

                <include
                    android:id="@+id/objectiveCl"
                    layout="@layout/layout_action_item"
                    app:title="@{@string/label_objective}"
                    app:value="@{createUserViewModel.user.objective}" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/saveTv"
            style="@style/bottom_button"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="48dp"
            android:text="保存"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>