<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="unitViewModel"
            type="com.shuange.lesson.modules.unit.viewmodel.UnitViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        >

        <ImageView
            android:id="@+id/closeIv"
            android:layout_width="@dimen/close_width"
            android:layout_height="@dimen/close_width"
            android:layout_marginStart="@dimen/base_side_width"
            android:layout_marginTop="36dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/heartIv"
            android:layout_width="@dimen/close_width"
            android:layout_height="@dimen/close_width"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_heart_on"
            app:layout_constraintBottom_toBottomOf="@+id/closeIv"
            app:layout_constraintEnd_toStartOf="@+id/lifeTv"
            app:layout_constraintTop_toTopOf="@+id/closeIv" />

        <TextView
            android:id="@+id/lifeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_side_width"
            android:gravity="center"
            android:scaleType="fitXY"
            android:textColor="@color/hex_FF5337"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/closeIv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/closeIv"
            app:life="@{unitViewModel.life}"
            tools:text="8" />

        <ProgressBar
            android:id="@+id/progressPb"
            style="@style/mProgressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:progress="@{unitViewModel.progress}"
            app:layout_constraintTop_toBottomOf="@+id/closeIv"
            tools:progress="40" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressPb" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>