<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="baseLessonViewModel"
            type="com.shuange.lesson.modules.lesson.viewmodel.BaseLessonViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/containerFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/nextTv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_bg_base_btn"

            android:layout_marginStart="@dimen/base_side_width"
            android:layout_marginEnd="@dimen/base_side_width"
            android:layout_marginBottom="58dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:visible="@{baseLessonViewModel.done}"
            android:text="下一题"
            />

    </FrameLayout>
</layout>