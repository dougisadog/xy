<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="teacherBean"
            type="com.shuange.lesson.modules.teacher.bean.TeacherBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <com.shuange.lesson.view.CustomRoundAngleImageView
            android:id="@+id/imageIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:image="@{teacherBean.image}"
            app:layout_constraintDimensionRatio="h,112:84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="12dp"
            tools:src="@drawable/icon_cancel" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{teacherBean.subTitle}"
            android:textColor="@color/hex_2B2E35"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/contentTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageIv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="郭老师·美式发音速成课" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{teacherBean.introduction}"
            android:textColor="@color/hex_7A7A7A"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageIv"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            app:layout_constraintBottom_toTopOf="@+id/nameTv"
            tools:text="真人视频教学，专项突破真人视频教学，专项突破真人视频教学，专项突破" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="13dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{teacherBean.nameText}"
            android:textColor="@color/hex_A2A2A2"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageIv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="主讲老师：郭老师" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>