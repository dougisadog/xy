<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="courseInfoItem"
            type="com.shuange.lesson.modules.course.bean.CourseInfoItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <com.shuange.lesson.view.CustomRoundAngleImageView
            android:id="@+id/imageIv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:image="@{courseInfoItem.image}"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="12dp"
            tools:src="@drawable/icon_cancel" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{courseInfoItem.title}"
            android:textColor="@color/hex_282828"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/contentTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageIv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="初级课程" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:text="@{courseInfoItem.content}"
            android:textColor="@color/hex_9B9B9B"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageIv"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="4.学问位置》核心课程A" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>