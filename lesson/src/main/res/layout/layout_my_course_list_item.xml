<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myCourseBean"
            type="com.shuange.lesson.modules.course.bean.MyCourseBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <com.shuange.lesson.view.CustomRoundAngleImageView
            android:id="@+id/imageIv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:image="@{myCourseBean.image}"
            app:layout_constraintDimensionRatio="h,343:194"
            app:layout_constraintEnd_toStartOf="@+id/gl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="12dp"
            tools:src="@drawable/icon_cancel" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{myCourseBean.title}"
            android:textColor="@color/hex_2B2E35"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageIv"
            tools:text="课程主题：美式发音速成课" />

        <TextView
            android:id="@+id/teacherTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{myCourseBean.teacher.nameText}"
            android:textColor="@color/hex_A2A2A2"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            tools:text="主讲老师：JENNY老师" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>